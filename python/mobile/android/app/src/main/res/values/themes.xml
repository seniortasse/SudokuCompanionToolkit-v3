<resources>

    <!-- App-wide theme (MainActivity etc.) -->
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Transparent status bar over camera -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- IMPORTANT: keep the window black so thereâ€™s no white flash while SurfaceView warms up -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Full-black results screen -->
    <style name="Theme.SudokuCompanion.Results" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

</resources>