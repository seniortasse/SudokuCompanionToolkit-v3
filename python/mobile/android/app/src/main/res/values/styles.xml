<resources>

    <!-- Base M3 button -->
    <style name="Sudoku.Button.Base" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">#22FFFFFF</item>
    </style>

    <!-- Primary (filled) - white on black -->
    <style name="Sudoku.Button.Primary" parent="Sudoku.Button.Base">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Secondary (outlined) - transparent with white stroke -->
    <style name="Sudoku.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">#22FFFFFF</item>
    </style>

</resources>